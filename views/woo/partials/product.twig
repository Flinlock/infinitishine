{% if product.product %}
<div class="product">
    <div class="clearfix">
        <div class="inner">
            <div class="img-wrapper">
                <a href="{{product.link}}">
                    {% if product.is_on_sale() %}
                        <span class="sale-label badge">SALE!</span>
                    {% endif %}
                    <img class="img-fluid" src="{{product.thumbnail.src('product-thumbnail')}}" />
                </a>
            </div>
            <h5 class="card-title title">
                <a href="{{product.link}}">{{product.post_title}}</a>
            </h5>
            
            <div>
                {{product.price_html}}
            </div>
            
            {% include 'partials/product/brands.twig' %}
         
            {% include 'woo/partials/add-to-cart-ajax.twig' %}
        </div>
    </div>
</div>
{% endif %}